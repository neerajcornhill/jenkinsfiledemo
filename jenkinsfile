pipeline{
    
    agent { label 'linuxagent1' }
    tools{
        maven 'mymaven'
    }
   // in agent any = any available server 
   // agent any

  
  
   stages {

     stage('Clone a Repo'){
           steps{
               git 'https://github.com/neerajcornhill/DevOpsCodeDemo.git'
           }
       }
  
       
       stage('Compile the code'){
           steps{
               sh 'mvn compile'
           }
       }
       
       stage('CodeReview'){
           steps{
               //sh 'mvn pmd:pmd'
                 sh ''mvn sonar:sonar'
           }
       }
       
       stage('Unit Test'){
           steps{
               sh 'mvn test'
           }
       }
       
       stage('Package'){
           steps{
               sh 'mvn package'
           }
       }
    }
}
